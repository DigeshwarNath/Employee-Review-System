<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <style> 
        .table-size tr { 
            overflow: hidden;
            height: 10px;
        }
        td.table-column > div.item {
            height: 20px;
            overflow:hidden;
        }
    </style>

    <title>Records</title>
</head>

<body>

    <!-- PARTIAL FOR HEADER -->
    <%- include('_header') %>

        <div class="w-75 mx-auto mt-5">

            <div class="row">
                <div class="col-6">
                    <h1>All Reviews</h1>
                </div>

                <div class="col-6 d-flex justify-content-end">
                    <a href="/review/addreview" type="button" class="btn btn-primary align-self-center">+ Add Review</a>
                </div>

            </div>
            
                <%if(allreviewdata.length > 0){%>

                <div class="mt-3 mb-3">   

                    <table class="table table-bordered table-size">

                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">S.no</th>
                                <th scope="col">From</th>
                                <th scope="col">To</th>
                                <th scope="col">Feedback</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>

                        <%j=1%>
                        <% for(let i=0;i< allreviewdata.length;i++){%>

                        <tbody>
                            <tr>
                                <th scope="row"><%=j++%></th>
                                <td><%=allreviewdata[i].fromemailid%></td>
                                <td><%=allreviewdata[i].foremailid%></td>
                                <td class="table-column"><div class="item"><%=allreviewdata[i].feedback%></div></td>
                                <td style="display: flex;">
                                    <a href="/review/edit/<%=allreviewdata[i].id%>" type="button" class="btn btn-success btn-small" style="margin-right: 4.5px;">Edit</a>
                                    <a href="/review/view/<%=allreviewdata[i].id%>" type="button" class="btn btn-warning btn-small" style="margin-left: 2.5px;">View</a>
                                </td>
                            </tr>
                        </tbody>
                        <% } %>

                    </table>

                </div>

                <%}else{%>

                    <div class="w-75 mx-auto mt-5">
                        <h2>NO RECORDS ARE FOUND.............:(</h2>
                    </div>
                    
                <%}%>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>
</html>