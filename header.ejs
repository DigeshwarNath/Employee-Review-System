<!-- IMPORTING THE SCRIPT FOR NOTY -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

<header>

    <nav class="navbar navbar-dark bg-primary">

     <div class="container-fluid">

         <a class="navbar-brand" href="/">Employee Review System</a>
        <% if(locals.user) { %>
         <a class="navbar-brand" href="/">Hello <%=locals.user.name%></a>
        <%}%>

         <form class="d-flex">
            <% if(locals.user && locals.user.isAdmin) { %>
             <a class="navbar-brand" href="/admin/assigntask">Assign Task</a>
             <a class="navbar-brand" href="/admin/employeerecords">E-dashboard</a>
             <a class="navbar-brand" href="/review/reviewdata">R-dashboard</a>
             <a class="navbar-brand" href="/users/SignOut">Signout</a>
            <%} else {  %>
                <a class="navbar-brand" href="/users/SignOut">Signout</a>
            <% } %>
         </form>
         
    </div>

    </nav>

</header>

<!-- SCRIPT FOR SETTING THE FLASH MESSGAE -->
<script>
            <% if(flash.success && flash.success.length > 0){%>

                new Noty({
                    theme:"relax",
                    text:"<%=flash.success%>",
                    type : 'success',
                    layout:'topRight',
                    timeout:1500
                    }).show();
            <%}%>

            <% if(flash.error && flash.error.length > 0){%>

                new Noty({
                    theme:"relax",
                    text:"<%=flash.error%>",
                    type : 'error',
                    layout:'topRight',
                    timeout:1500
                    }).show();
            <%}%>

            
</script>